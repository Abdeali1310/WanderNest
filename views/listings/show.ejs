<% layout("/layout/boilerplate") %>

<body>
  
  <div class="show-card" style="width: 18rem">
    <h3><%= list.title %></h3>
    <img src="<%= list.image %>" class="card-img-top" alt="<%= list.title %>" />
    <div class="show-card-body">
      <p class="show-card-text">
        <%= list.description %> <br />
        &#8377; <%= list.price.toLocaleString("en-IN") %> / night <br />
        <%= list.location %><br />
        <%= list.country %>
      </p>
      <div class="btns">
        <a style="color:black;text-decoration: none;" href="/listings/<%= list._id %>/edit"><button class="btn btn-warning">Edit</button></a><br /><br />
      <form
        method="post"
        action="/listings/<%= list._id %>/delete?_method=DELETE"
      >
        <button class="btn btn-danger">Delete</button>
      </form>
      </div>
    </div>
  </div>

  

  <!-- Review Form -->
  <div class="review-form-container">
    <hr>
    <h4 style="text-align: center;">Leave A Review</h4>
    <form action="/listings/<%= list.id %>/reviews" method="post" class="review-form needs-validation" novalidate>
      <div class="mb-3">
        <label for="rating" class="form-label">Rating : </label>
        <input type="range" min="1" max="5" name="rating" id="rating" class="form-range">
        <div id="rating-value" class="rating-value">3</div>
      </div>
      <div class="mb-3">
        <label for="review" class="form-label">Review</label>
        <textarea name="review" id="review" class="form-control " rows="6" cols="10" required></textarea>
        <div class="invalid-feedback">Comment field is required</div>
      </div>
      <button type="submit" class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
</body>

<script>
  document.addEventListener('DOMContentLoaded', (event) => {
      const ratingInput = document.getElementById('rating');
      const ratingValue = document.getElementById('rating-value');

      ratingValue.textContent = ratingInput.value;
      ratingInput.addEventListener('input', function() {
          ratingValue.textContent = ratingInput.value;
      });
  });
</script>


