<% layout("/layout/boilerplate") %>

<body>
    <form action="/listings/new" method="post" class="row g-3" autocomplete="on">
            <h3>Create New List</h3>
            <div class="col-12">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control" id="title"  name="title" placeholder="Enter a catchy Title">
            </div>
            <div class="col-12">
              <label for="desc" class="form-label">Description</label>
              <textarea name="description" id="desc" class="form-control" placeholder="Enter Description"></textarea>
            </div>
            <div class="col-md-6">
              <label for="img" class="form-label">Image link</label>
              <input type="text" class="form-control" id="img" placeholder="https://unsplash.com/images/....." name="image">
            </div>
            <div class="col-md-6">
              <label for="price" class="form-label">Price</label>
              <input type="number" class="form-control" placeholder="&#8377; 1,200" name="price">
            </div>
            <div class="col-md-6">
              <label for="country" class="form-label">Country</label>
              <input type="text" class="form-control" id="country" name="country" placeholder="India">
            </div>
            <div class="col-md-6">
                <label for="location" class="form-label">Country</label>
                <input type="text" class="form-control" id="location" name="location" placeholder="Ahmedabad, Gujarat">
            </div>
            
            <br><br>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">Add</button>
            </div>
          






